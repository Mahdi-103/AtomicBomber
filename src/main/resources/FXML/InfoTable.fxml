<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.InfoTableController">
    <VBox>
        <HBox>
            <Label text="Wave : "/>
            <Label fx:id="wave" text="1"/>
        </HBox>
        <HBox>
            <Label text="HP : "/>
            <Label fx:id="hp" text="3"/>
        </HBox>
        <HBox>
            <Label text="Kills : "/>
            <Label fx:id="kills" text="0"/>
        </HBox>
        <HBox>
            <Label text="Accuracy : "/>
            <Label fx:id="accuracy" text="0%"/>
        </HBox>
        <HBox>
            <Label text="Radio-active : "/>
            <Label fx:id="radioActive" text="0"/>
        </HBox>
        <HBox>
            <Label text="Cluster : "/>
            <Label fx:id="cluster" text="0"/>
        </HBox>
        <Label fx:id="migAlert" text="Mig is coming!" opacity="0"/>
    </VBox>
</Pane>
