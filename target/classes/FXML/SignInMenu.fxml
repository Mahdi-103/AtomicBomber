<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.signing.SignInMenuController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER" spacing="15">

    <TextField fx:id="username" maxWidth="180" alignment="CENTER" promptText="username"/>
    <PasswordField fx:id="password" maxWidth="180" alignment="CENTER" promptText="password"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Back" prefWidth="85" onAction="#back"/>
        <Button text="Login" prefWidth="85" onAction="#login"/>
    </HBox>
</VBox>
